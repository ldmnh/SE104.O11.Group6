<div class="modal-otp otp-bank-card">
    <div class="otp-container">
        <section class="otp">
            <form class="otp__card">
                <h1>Xác thực OTP</h1>
                <p class="otp__notice">Mã OTP đã được gửi đến số điện thoại của bạn!</p>
                <div class="otp__card-input">
                    <input type="text" name="otp1" class="form-control otp__card-text" maxlength="1" oninput="this.value = this.value.replace(/[^0-9]/g, '');">
                    <input type="text" name="otp2" class="form-control otp__card-text" maxlength="1" oninput="this.value = this.value.replace(/[^0-9]/g, '');">
                    <input type="text" name="otp3" class="form-control otp__card-text" maxlength="1" oninput="this.value = this.value.replace(/[^0-9]/g, '');">
                    <input type="text" name="otp4" class="form-control otp__card-text" maxlength="1" oninput="this.value = this.value.replace(/[^0-9]/g, '');">
                    <input type="text" name="otp5" class="form-control otp__card-text" maxlength="1" oninput="this.value = this.value.replace(/[^0-9]/g, '');">
                    <input type="text" name="otp6" class="form-control otp__card-text" maxlength="1" oninput="this.value = this.value.replace(/[^0-9]/g, '');">
                </div>
                <p class="otp__reject">Không nhận được OTP?
                    <a class="retry" href="#">Gửi lại OTP</a>
                </p>
                <div class="otp__button">
                    <button class="otp__button--submit1 otp__button--submit1--bank" type="button">Hủy</button>

                    <button class="otp__button--submit2 otp__button--submit2--bank" type="submit">Tiếp tục</button>
                </div>
                <div class="otp__close-btn otp__close-btn--bank">
                    <span class="material-symbols-outlined">cancel</span>
                </div>
            </form>
        </section>
    </div>
</div>