<div class="room-container">
    <div class="room">
        <h2 class="room__type"><%=room.room_class%></h2>
        <div class="room__detail">
            <div class="room__detail--left">
                <img src="/imgs/room/<%=room.room_details_img_url%>" alt="<%=room.room_details_img_url%>"
                    class="room__preview">
            </div>

            <div class="room__detail--right">
                <div class="room__title">
                    <h2><%= room.room_type %></h2>
                    <div>
                        <span onclick="minus(event)" class="material-symbols-outlined">remove</span>
                        <input type="number" name="room_number[]" value="0" class="form-control">
                        <span onclick="plus(event)" class="material-symbols-outlined">add</span>
                    </div>
                </div>
                <div class="room__content">
                    <div class="room__content--left">
                        <div>
                            <% if(room.room_single_bed != 0) {%>
                            <span class="material-symbols-outlined">single_bed</span>
                            <p> <%= room.room_single_bed %> giường đơn </p>
                            <%}%>
                        </div>

                        <div>
                            <% if(room.room_double_bed != 0) {%>
                            <span class="material-symbols-outlined">bed</span>
                            <p> <%= room.room_double_bed %> giường đôi </p>
                            <%}%>
                        </div>                       

                        <div>
                            <span class="material-symbols-outlined">square_foot</span>
                            <p><%=room.room_area%> m<sup>2</sup></p>
                        </div>

                        <% room.extension.forEach(function(extension) { %>
                        <div>
                            <span class="material-symbols-outlined">
                                <% switch (extension.exte_id) {
                                case 1 : %>
                                restaurant
                                <% break;
                                    
                                case 2 : %>
                                wifi
                                <% break;
                                    
                                case 3 : %>
                                smoke_free
                                <% break;
                                
                                case 4 : %>
                                pets
                                <% break;

                                case 5 : %>
                                groups
                                <% break;

                                case 6 : %>
                                kitchen
                                <% break;

                                case 7 : %>
                                shower
                                <% break;

                                case 8 : %>
                                ac_unit
                                <% break;

                                case 9 : %>
                                chair
                                <% break;

                                case 10 : %>
                                bathtub
                                <% break;

                                case 11 : %>
                                desktop_windows
                                <% break;

                                default : %>
                                done
                                <% break;
                                    
                                    } %>
                            </span>
                            <p> <%= extension.exte_name %> </p>
                        </div>
                        <% }) %>

                    </div>
                    <div class="room__content--mid">
                        <div>
                            <span class="material-symbols-outlined">boy</span>
                            <p> <%= room.room_max_adult %> người lớn</p>
                        </div>
                        <div>
                            <% if(room.room_max_child != 0) {%>
                            <span class="material-symbols-outlined">child_care</span>
                            <p> <%= room.room_max_child %> trẻ em </p>
                            <%}%>
                        </div>
                        <div>
                            <span class="material-symbols-outlined">help</span>
                            <a href="/terms-of-use">Chính sách hủy phòng</a>
                        </div>
                    </div>
                    <div class="room__content--right">
                        <p class="room__left"> (<%= room.room_total %> phòng trống)</p>
                        <% if (room.room_discount) {%>
                        <p class="room__origin-price"><del><%= room.room_cost_currency %> </del></p>
                        <%}%>
                        <p class="room__price"><%= room.room_cost_after_currency %></p>
                        <p class="room__unit">/phòng/đêm</p>
                        <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#room-detail">Xem chi
                            tiết phòng</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="room-detail" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-centered ">
            <div class="modal-content">
                <div class="modal__view">
                    <h1><%=room.room_class%></h1>
                    <div class="modal__view--big">
                        <button onclick="prevSlide(event)" type="button"><span
                                class="material-symbols-outlined">chevron_left</span></button>
                        <img class="modal__slide" src="/imgs/room/<%= room.room_img[0].room_type_image_url %>" alt="">
                        <button onclick="nextSlide(event)" type="button"><span
                                class="material-symbols-outlined">chevron_right</span></button>
                    </div>
                    <div class="modal__view--small">
                        <% room.room_img.forEach(function(img){ %>
                            <button onclick="currentSlide(event)" type="button"><img class="modal__thumnail"
                                src="/imgs/room/<%= img.room_type_image_url %>" alt=""></button>
                        <%}) %>
                        
                    </div>
                </div>

                <div class="modal__detail detail">
                    <!-- <div class="detail__info">
                        <div class="modal__header">
                            <h2>Thông tin phòng</h2>
                            <button onclick="resetSlide(event)" type="button" class="btn-close" data-bs-dismiss="modal"
                                aria-label="Close"></button>
                        </div>
                        <div class="detail__item">
                            <span class="material-symbols-outlined">square_foot</span>
                            <p>50 m<sup>2</sup></p>
                        </div>
                        <div class="detail__item">
                            <span class="material-symbols-outlined">groups</span>
                            <p>2 khách</p>
                        </div>
                    </div> -->

                    <div class="detail__feature feature">
                        <h2>Tiện nghi phòng</h2>
                        <div class="feature__row">
                            <div class="feature__col-left">
                                <div class="detail__item">
                                    <% if(room.room_single_bed != 0) {%>
                                    <span class="material-symbols-outlined">single_bed</span>
                                    <p> <%= room.room_single_bed %> giường đơn </p>
                                    <%}%>
                                </div>
        
                                <div class="detail__item">
                                    <% if(room.room_double_bed != 0) {%>
                                    <span class="material-symbols-outlined">bed</span>
                                    <p> <%= room.room_double_bed %> giường đôi </p>
                                    <%}%>
                                </div>                       
        
                                <div class="detail__item">
                                    <span class="material-symbols-outlined">square_foot</span>
                                    <p><%=room.room_area%> m<sup>2</sup></p>
                                </div>
        
                                <% room.extension.forEach(function(extension) { %>
                                <div class="detail__item">
                                    <span class="material-symbols-outlined">
                                        <% switch (extension.exte_id) {
                                        case 1 : %>
                                        restaurant
                                        <% break;
                                            
                                        case 2 : %>
                                        wifi
                                        <% break;
                                            
                                        case 3 : %>
                                        smoke_free
                                        <% break;
                                        
                                        case 4 : %>
                                        pets
                                        <% break;
        
                                        case 5 : %>
                                        groups
                                        <% break;
        
                                        case 6 : %>
                                        kitchen
                                        <% break;
        
                                        case 7 : %>
                                        shower
                                        <% break;
        
                                        case 8 : %>
                                        ac_unit
                                        <% break;
        
                                        case 9 : %>
                                        chair
                                        <% break;
        
                                        case 10 : %>
                                        bathtub
                                        <% break;
        
                                        case 11 : %>
                                        desktop_windows
                                        <% break;
        
                                        default : %>
                                        done
                                        <% break;
                                            
                                            } %>
                                    </span>
                                    <p> <%= extension.exte_name %> </p>
                                </div>
                                <% }) %>
                            </div>

                            <div class="feature__col-right">
                                <div class="detail__item">
                                    <span class="material-symbols-outlined">boy</span>
                                    <p> <%= room.room_max_adult %> người lớn</p>
                                </div>
                                <div class="detail__item">
                                    <% if(room.room_max_child != 0) {%>
                                    <span class="material-symbols-outlined">child_care</span>
                                    <p> <%= room.room_max_child %> trẻ em </p>
                                    <%}%>
                                </div>
                                <div class="detail__item">
                                    <span class="material-symbols-outlined">help</span>
                                    <a href="/terms-of-use">Chính sách hủy phòng</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>