<div class="room-container">
    <div class="room">
        <input type="hidden" value="<%= room.room_id %>" name="room_id[]" class="form-control">
        <h2 class="room__type"><%= room.room_class%></h2>
        <div class="room__detail">
            <div class="room__detail--left">
                <img src="/imgs/details/1.jpg" alt="" class="room__preview">
                <div class="room__area">
                    <span class="material-symbols-outlined">square_foot</span>
                    <p>50 m<sup>2</sup></p>
                </div>
                <div class="room__feature">
                    <button type="button" class="btn">Máy lạnh</button>
                    <button type="button" class="btn">Bồn tắm</button>
                </div>
            </div>

            <div class="room__detail--right">
                <div class="room__title">
                    <h2></h2>
                    <div>
                        <span id="room__minus" class="material-symbols-outlined">remove</span>
                        <input type="number" name = "room_number[]" value="0" id="room__quantity" class="form-control">
                        <span id="room__plus" class="material-symbols-outlined">add</span>
                    </div>
                </div>
                <div class="room__content">
                    <div class="room__content--left">
                        <div>
                            <span class="material-symbols-outlined">king_bed</span>
                            <p> giường đôi</p>
                        </div>
                        <div>
                            <span class="material-symbols-outlined">king_bed</span>
                            <p> giường đôi</p>
                        </div>
                        <div>
                            <span class="material-symbols-outlined">king_bed</span>
                            <p></p>
                        </div>
                        <div>
                            <span class="material-symbols-outlined">king_bed</span>
                            <p>1 giường đôi</p>
                        </div>
                        <div>
                            <span class="material-symbols-outlined">king_bed</span>
                            <p>1 giường đôi</p>
                        </div>
                    </div>
                    <div class="room__content--mid">
                        <div>
                            <span class="material-symbols-outlined">groups</span>
                            <p>2 khách</p>
                        </div>
                        <div>
                            <span class="material-symbols-outlined">help</span>
                            <a href="#">Chính sách hủy phòng</a>
                        </div>
                    </div>
                    <div class="room__content--right">
                        <p class="room__left">(5 phòng trống)</p>
                        <input type="hidden" value="<%=room.room_cost %>" name="room_cost_before[]" class="form-control">
                        <input type="hidden" value="<%=room.room_cost - (room.room_cost*room.room_discount) %>" name="room_cost_after[]" class="form-control">
                        <p class="room__origin-price"><del>VND </del></p>
                        <p class="room__price"></p>
                        <p class="room__unit">/phòng/đêm</p>
                        <button type="button" class="bt" data-bs-toggle="modal" data-bs-target="#room-detail">Xem chi tiết phòng</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="room-detail" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-centered ">
            <div class="modal-content">
                <div class="modal__view">
                    <h1></h1>
                    <div class="modal__view--big">
                        <span class="material-symbols-outlined">chevron_left</span>
                        <img src="/imgs/details/1.jpg" alt="">
                        <span class="material-symbols-outlined">chevron_right</span>
                    </div>
                    <div class="modal__view--small">
                        <img src="/imgs/details/2.jpg" alt="">
                        <img src="/imgs/details/3.jpg" alt="">
                        <img src="/imgs/details/4.jpg" alt="">
                        <img src="/imgs/details/1.jpg" alt="">
                    </div>
                </div>

                <div class="modal__detail detail">
                    <div class="detail__info">
                        <div class="modal__header">
                            <h2>Thông tin phòng</h2>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="detail__item">
                            <span class="material-symbols-outlined">square_foot</span>
                            <p>50 m<sup>2</sup></p>
                        </div>
                        <div class="detail__item">
                            <span class="material-symbols-outlined">groups</span>
                            <p>2 khách</p>
                        </div>
                    </div>

                    <div class="detail__feature feature">
                        <h2>Tiện nghi phòng</h2>
                        <div class="feature__row">
                            <div class="feature__col-left">
                                <div class="detail__item">
                                    <span class="material-symbols-outlined">king_bed</span>
                                    <p><%= room.extension[0].exte_id %></p>
                                </div>
                                <div class="detail__item">
                                    <span class="material-symbols-outlined">king_bed</span>
                                    <p>1 giường đôi</p>
                                </div>
                                <div class="detail__item">
                                    <span class="material-symbols-outlined">king_bed</span>
                                    <p>1 giường đôi</p>
                                </div>
                                <div class="detail__item">
                                    <span class="material-symbols-outlined">king_bed</span>
                                    <p>1 giường đôi</p>
                                </div>
                                <div class="detail__item">
                                    <span class="material-symbols-outlined">king_bed</span>
                                    <p>1 giường đôi</p>
                                </div>
                            </div>

                            <div class="feature__col-right">
                                <div class="detail__item">
                                    <span class="material-symbols-outlined">king_bed</span>
                                    <p>1 giường đôi</p>
                                </div>
                                <div class="detail__item">
                                    <span class="material-symbols-outlined">square_foot</span>
                                    <p></p>
                                </div>
                                <div class="detail__item">
                                    <span class="material-symbols-outlined">king_bed</span>
                                    <p>1 giường đôi</p>
                                </div>
                                <div class="detail__item">
                                    <span class="material-symbols-outlined">king_bed</span>
                                    <p>1 giường đôi</p>
                                </div>
                                <div class="detail__item">
                                    <span class="material-symbols-outlined">king_bed</span>
                                    <p>1 giường đôi</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>