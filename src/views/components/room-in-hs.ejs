			<label for="">Ngày đặt:</label>
			<span><%=bookingDetail.book_datetime%></span>
		</div>
		<div class="room-in-hs__checkin-date">
			<label for="">Ngày bắt đầu:</label>
			<span><%= bookingDetail.book_start_datetime %></span>
