			<form action="/booking/detail" method="GET">
				<input type="hidden" value="<%=bookingDetail.book_id%>" name="book_id">
				<button type="submit" class="form--submit1 detail-btn">Xem chi tiết</button>
			</form>
			<% if (bookingDetail.book_status == 1) { %>
			<form action="/booking/detail" method="GET">
				<input type="hidden" value="<%=bookingDetail.book_id%>" name="book_id">
				<button type="submit" class="form--submit2 detail-btn">Đánh giá</button>
			</form>
			<%} else if (bookingDetail.book_status == 0) { %>
			<form action="/booking/detail" method="GET">
				<input type="hidden" value="<%=bookingDetail.book_id%>" name="book_id">
				<button type="submit" class="form--submit2 cancel-btn">Hủy đặt</button>
			</form>
