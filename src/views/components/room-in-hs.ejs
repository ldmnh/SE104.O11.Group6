			<label for="">Ngày kết thúc:</label>
			<span><%=bookingDetail.book_end_datetime%></span>
		</div>
		<div class="room-in-hs__book-name">
			<label for="">Người đặt phòng:</label>
			<span><%=bookingDetail.book_customer_name%></span>
