<div class="modal">
    <div class="account-container">
        <form class="account bank-form" id="account-js" action="/account/card/addBank" method="POST">
            <div class="account__card">
                <h1>Thêm tài khoản ngân hàng</h1>
                <div class="account__items">
                    <div class="account__item">
                        <h2>Tên ngân hàng:</h2>
                        <select name="bank_name" class="form-select" aria-label="Default select example" >
                            <option selected>Chọn ngân hàng</option>
                            <option value="BIDV">BIDV</option>
                            <option value="Vietcombank">Vietcombank</option>
                            <option value="MB">MB</option>
                            <option value="Agribank">Agribank</option>
                            <option value="ACB">ACB</option>
                        </select>
                    </div>

                    <div class="account__item">
                        <h2>Tên chi nhánh:</h2>
                        <input name="bank_branch" class="form-control bank_branch" type="text"
                            placeholder="Chọn tên chi nhánh"  />
                    </div>
                    <div class="account__item">
                        <h2>Số tài khoản:</h2>
                        <input name="bank_num" class="form-control" type="text" placeholder="Nhập số tài khoản" oninput="this.value = this.value.replace(/[^0-9]/g, '');"
                             />
                    </div>
                    <div class="account__item">
                        <div class="account__item--notice">
                            <h2>Tên chủ tài khoản:</h2>
                            <p>(In hoa, không dấu)</p>
                        </div>
                        <input name="bank_name_pers" class="form-control" type="text"
                            placeholder="Nhập tên chủ tài khoản"  />
                    </div>
                </div>
                <div class="account__button">
                    <button class="form-button--submit1" type="button">Hủy</button>

                    <button class="form-button--submit2" type="submit">Hoàn thành</button>
                </div>
                <div class="account__btn-close">
                    <span class="material-symbols-outlined closeIcon">cancel</span>
                </div>
            </div>
        </form>
    </div>
</div>