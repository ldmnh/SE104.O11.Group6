<header>
	<div class="header-container">
		<div class="header-container__top">
			<div class="header-container__logo-img">
				<img src="/imgs/logo.svg" alt="Logo" class="logo-click-hm" />
			</div>
			<div class="header-container__nav-top">
				<button href="#" class="status-layer homepage-btn-hm">Trang chủ</button>
				<button href="#" class="status-layer noti-btn-hm">Thông báo</button>
			</div>
			<div class="header-container__top-authenticator">
				<% if (user) { %>
				<p>Chào,</p>
				<a href="/account/information">
					<p class="name-btn-hm"><%= user?.last_name + ' ' + user?.first_name %></p>
				</a>
				<a href="/account/information">
					<img src="/imgs/user/<%= user?.avatar ?? 'default.jpg'%>" alt="avatar" class="avatar-btn-hm" />
				</a>
				<% } else { %>
				<a href="/auth/login" style='text-decoration: none;'>
					<button class="button-signin signin-btn-hf" type="button">
						<div class="status-layer">
							<span>Đăng nhập</span>
						</div>
					</button>
				</a>
				<a href="/auth/register" style='text-decoration: none;'>
					<button class="sec button-signup signup-btn-hf" type="button">
						<div class="status-layer">
							<span>Đăng ký</span>
						</div>
					</button>
				</a>
				<% } %>
			</div>
		</div>
		<div>
			<%- include('../components/search-bar.ejs') %>
		</div>
	</div>
</header>